<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="10 seconds">
	<property name="LOG_HOME" value="/oneapm/log/mail-server" />

	<appender name="main" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${LOG_HOME}/mail-server.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${LOG_HOME}/mail-server.log-%d{yyyy-MM-dd}
			</FileNamePattern>
			<MaxHistory>3</MaxHistory>
		</rollingPolicy>
		<encoder>
			<charset>UTF-8</charset>
			<pattern>%d{HH:mm:ss.SSS} %class %-5level %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="noSend" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${LOG_HOME}/no-send.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${LOG_HOME}/no-send.log-%d{yyyy-MM-dd}
			</FileNamePattern>
			<MaxHistory>30</MaxHistory>
		</rollingPolicy>
		<encoder>
			<charset>UTF-8</charset>
			<pattern>%msg%n</pattern>
		</encoder>
	</appender>

	<appender name="debug" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${LOG_HOME}/debug.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${LOG_HOME}/debug.log-%d{yyyy-MM-dd}
			</FileNamePattern>
			<MaxHistory>30</MaxHistory>
		</rollingPolicy>
		<encoder>
			<charset>UTF-8</charset>
			<pattern>%msg%n</pattern>
		</encoder>
	</appender>


	<logger name="com.blueocn.mail.sender.MailSender" level="ERROR" additivity="true">
		<appender-ref ref="noSend" />
	</logger>

	<logger name="com.blueocn.mail.sender.impl.SendCloudMailSender" level="DEBUG" additivity="false">
		<appender-ref ref="main" />
	</logger>

	<logger name="com.blueocn.mail.kafka.KafkaConsumer" level="DEBUG" additivity="false">
		<appender-ref ref="debug" />
	</logger>
	
	<root level="INFO">
		<appender-ref ref="main" />
	</root>
</configuration>
